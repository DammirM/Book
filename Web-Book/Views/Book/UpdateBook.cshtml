@model Minimal_Api_Book.Data.Book


@{
    ViewData["Title"] = "UpdateBook";
}

<h1>Update Book</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateBook">
            <input asp-for="BookId" hidden />

            <div class="form-group">
                <label asp-for="Titel" class="control-label"></label>
                <input asp-for="Titel" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="About" class="control-label"></label>
                <input asp-for="About" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="GenreId" class="control-label"></label>
                <input asp-for="GenreId" class="form-control" />
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input"
                      asp-for="Loan" />@Html.DisplayNameFor(Model => Model.Loan)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="BookIndex">Back To List</a>
</div>
